<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.market.server.mapper.ChattingMapper">

    <insert id="register" parameterType="com.market.server.dto.RoomDTO">
        INSERT INTO room (roomNumber, roomName)
        VALUES (#{roomNumber}, #{roomName})
    </insert>

    <select id="selectRooms" resultType="com.market.server.dto.RoomDTO">
        SELECT `roomNumber`,
        `roomName`,
        `type`
        FROM `room`
        <choose>
            <when test="sortStatus == 'NEWEST'">
                ORDER BY createtime DESC
            </when>
            <when test="sortStatus == 'OLDEST'">
                ORDER BY createtime ASC
            </when>
        </choose>
        LIMIT #{searchCount, jdbcType=INTEGER} OFFSET #{pagingStartOffset, jdbcType=INTEGER}
    </select>

    <select id="getLastRoomNumber" resultType="int">
        SELECT roomNumber
        FROM room
        ORDER BY roomNumber
        DESC LIMIT 1;
    </select>

</mapper>